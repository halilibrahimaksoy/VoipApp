<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anim="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnrSend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    anim:layout_constraintBottom_toBottomOf="parent"
    tools:showIn="@layout/fragment_conversation_detail">

    <ImageView
        android:id="@+id/btn_start_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@android:drawable/ic_menu_camera"
        anim:layout_constraintBottom_toBottomOf="parent"
        anim:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#c3c3c3"
        android:hint="Type a new message...."
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:padding="5dp"
        android:textCursorDrawable="@null"
        android:layout_margin="5dp"
        anim:layout_constraintBottom_toBottomOf="parent"
        anim:layout_constraintEnd_toStartOf="@id/btnSend"
        anim:layout_constraintStart_toEndOf="@id/btn_start_camera"
        anim:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_send"
        anim:layout_constraintBottom_toBottomOf="parent"
        anim:layout_constraintEnd_toEndOf="parent"
        anim:layout_constraintStart_toEndOf="@id/txtMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>